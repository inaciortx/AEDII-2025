{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: Compilar Projeto (gcc)",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                
                // 1. DIZ AO GCC ONDE ACHAR OS .H
                "-ISistemaAcademico/include",
                
                // 2. CAMINHO CORRETO DOS ARQUIVOS .C
                "SistemaAcademico/src/main.c",
                "SistemaAcademico/src/btree.c",
                "SistemaAcademico/src/arquivos.c",
                
                // 3. CAMINHO CORRETO DA SA√çDA
                "-o",
                "SistemaAcademico/output/SistemaAcademico.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}